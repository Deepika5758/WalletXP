{
  "name": "UserProfile",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "description": "Unique username for login"
    },
    "password": {
      "type": "string",
      "description": "User password"
    },
    "monthly_income": {
      "type": "number",
      "default": 0
    },
    "xp_points": {
      "type": "number",
      "default": 0
    },
    "level": {
      "type": "number",
      "default": 1
    },
    "current_streak": {
      "type": "number",
      "default": 0
    },
    "longest_streak": {
      "type": "number",
      "default": 0
    },
    "last_activity_date": {
      "type": "string",
      "format": "date"
    },
    "badges": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "completed_lessons": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "is_creator": {
      "type": "boolean",
      "default": false
    }
  },
  "required": [
    "username",
    "password"
  ]
}
