{
  "name": "Challenge",
  "type": "object",
  "properties": {
    "user_id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "xp_reward": {
      "type": "number"
    },
    "type": {
      "type": "string",
      "enum": [
        "daily",
        "weekly"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "active",
        "completed",
        "expired"
      ],
      "default": "pending"
    },
    "accepted_at": {
      "type": "string",
      "format": "date-time"
    },
    "expires_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "user_id",
    "title",
    "xp_reward",
    "type"
  ]
}
